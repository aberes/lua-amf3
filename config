OS := $(shell uname)

# BSD
ifneq (,$(findstring BSD,${OS}))
	LUAINC ?= ${PREFIX}/include/lua51
	LUALIB ?= lua-5.1
	LUABIN ?= lua51
endif

# Linux
ifeq (${OS},Linux)
	PREFIX ?= /usr
	ifeq (,$(wildcard /etc/gentoo-release /etc/SuSE-release)) # not for Gentoo and OpenSUSE
		LUAINC ?= ${PREFIX}/include/lua5.1
		LUALIB ?= lua5.1
	endif
endif
