OS := $(shell uname)

# OSX
ifeq (${OS}, Darwin)
	PREFIX ?= /opt/local
endif

# FreeBSD
ifeq (${OS}, FreeBSD)
	LUAINC ?= ${PREFIX}/include/lua51
	LUALIB ?= lua-5.1
endif

# Linux
ifeq (${OS}, Linux)
	PREFIX ?= /usr
	LUAINC ?= ${PREFIX}/include/lua5.1
	LUALIB ?= lua5.1

	# Gentoo, OpenSUSE
	ifneq ($(wildcard /etc/gentoo-release /etc/SuSE-release), )
		LUAINC ?= ${PREFIX}/include
		LUALIB ?= lua
	endif
endif
